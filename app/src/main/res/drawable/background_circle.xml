<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="oval">
        <solid android:color="#1E000000"/>
    </shape>
</item>

<item
    android:left="0dp"
    android:right="2dp"
    android:top="0dp"
    android:bottom="3dp">

    <shape
        android:shape="oval">

        <gradient android:startColor="#FA9E79" android:endColor="#F6698D" android:angle="45"/>

        <size
            android:width="120dp"
            android:height="120dp"/>
    </shape>
</item>
</layer-list>